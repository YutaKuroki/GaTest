<Window
    x:Class="DistanceGA.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DistanceGA"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    mc:Ignorable="d">
    <Grid Background="Orange">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Canvas
            x:Name="MyCanvas"
            Grid.Row="0"
            Height="600"
            Width="600"
            Margin="10"
            Background="#FFFFD8B1" />
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button
                Height="30"
                Margin="10"
                Click="Initialize_Click"
                Content="Initialize" />
            <Button
                Height="30"
                Margin="10"
                Click="RunGeneticAlgorithm_Click"
                Content="Run Genetic Algorithm" />
            <TextBlock
                x:Name="GenerationTextBlock"
                Margin="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="16"
                Text="世代: 0" />
            <TextBlock
                x:Name="DistanceTextBlock"
                Margin="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="16"
                Text="距離: 0" />

        </StackPanel>

    </Grid>
</Window>
